<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@color/textoBlanco"
    android:layout_marginBottom="6dp">

    <ImageView
        android:id="@+id/ivImagenProductoCat"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_audifonos" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombreProductoCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textStyle="bold"
            android:textColor="@color/fondoGlobal"/>

        <TextView
            android:id="@+id/tvDescripcionProductoCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textColor="@color/destacado"/>

        <TextView
            android:id="@+id/tvPrecioProductoCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textColor="@color/destacado"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnAgregarProductoCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Añadir"
        android:textColor="@color/textoBlanco"
        android:backgroundTint="@color/destacado"/>
</LinearLayout>