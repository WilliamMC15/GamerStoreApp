<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@color/textoBlanco"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/ivImagenProductoCarrito"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_audifonos"
        android:layout_marginEnd="16dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombreProductoCarrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/fondoGlobal" />

        <TextView
            android:id="@+id/tvPrecioProductoCarrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textColor="@color/destacado" />
    </LinearLayout>

    <Button
        android:id="@+id/btnEliminarProductoCarrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:textColor="@color/textoBlanco"
        android:backgroundTint="@color/destacado" />
</LinearLayout>