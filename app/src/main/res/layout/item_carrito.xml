<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <!-- Imagen del producto -->
    <ImageView
        android:id="@+id/ivCarritoImagen"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_cart" />

    <!-- Nombre del producto -->
    <TextView
        android:id="@+id/tvCarritoNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:text="Producto"
        android:textStyle="bold"
        android:textSize="16sp" />

    <!-- Controles de cantidad -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginEnd="12dp">

        <ImageButton
            android:id="@+id/btnDisminuir"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_remove"
            android:contentDescription="Disminuir cantidad"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/tvCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:text="1"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/btnAumentar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_add"
            android:contentDescription="Aumentar cantidad"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

    <!-- BotÃ³n eliminar -->
    <ImageButton
        android:id="@+id/btnEliminarCarrito"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_delete"
        android:contentDescription="Eliminar producto"
        android:background="?android:attr/selectableItemBackgroundBorderless" />

</LinearLayout>